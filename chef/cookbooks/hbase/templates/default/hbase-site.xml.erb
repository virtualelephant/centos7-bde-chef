<configuration>
<property>
  <name>hbase.cluster.distributed</name>
  <value>true</value>
</property>
<property>
  <name>hbase.rootdir</name>
  <value><%= @hbase_hdfs_home %></value>
</property>
<% if node.role?('hbase_master') %>
<property>
  <name>hbase.master.info.bindAddress</name>
  <value><%= @http_address %></value>
</property>
<property>
  <name>hbase.master.dns.interface</name>
  <value><%= @bind_interface %></value>
</property>
<% end %>
<% if node.role?('hbase_regionserver') %>
<property>
  <name>hbase.regionserver.info.bindAddress</name>
  <value><%= @http_address %></value>
</property>
<property>
  <name>hbase.regionserver.dns.interface</name>
  <value><%= @bind_interface %></value>
</property>
<% end %>
<property>
  <name>hbase.zookeeper.quorum</name>
  <value><%= @zookeeper_quorum %></value>
</property>
<property>
  <name>hbase.zookeeper.dns.interface</name>
  <value><%= @bind_interface %></value>
</property>

<!-- properties specified by users -->
<%- conf = node['cluster_configuration']['hbase']['hbase-site.xml'] || {} rescue conf = {} %>
<%- conf.map do |key, value|
  next if ['hbase.rootdir'].include?(key)
%>
<property>
  <name><%= key %></name>
  <value><%= value %></value>
</property>
<%- end %>
<!-- end -->
</configuration>
